<div class="container">
  <div class="cards" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path @cocktail.picture.path, height: 300, width: 400, crop: :fill %>')">
    <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="col-xs-12 col-sm-6 col-md-4">
          <div class="card text-center">
            <p><%= link_to cocktail.name, cocktail_path(cocktail) %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
    <p><%= link_to "add new cocktail", new_cocktail_path(@cocktail), class: "btn btn-primary" %></p>
</div>
